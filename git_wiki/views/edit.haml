- @page_class << "edit"
- @title = "editing \"#{@page.name}\""
%form#edit{:method => 'POST', :action => "/#{@page}"}
  #editor
    #preview
      ~"#{@page.to_html}"
    %textarea{:name => 'body'}= @page.content

  #controls
    %a.cancel{:href=>"/#{@page}"} cancel
    %input.save{:type => :submit, :value => "Save", :disabled => true}
